<div class="box-wrapper">
  <div class="box">
    <div class="box-inner">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="box-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          <i class="fa fa-envelope"></i>
        </div>

        <div class="box-field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（６文字以上）"%>
          <i class="fa fa-lock"> </i>
        </div>

        <div class="box-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（再確認）"%>
          <i class="fa fa-lock"> </i>
        </div>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
